<div class="post-card">
  <div class="post-card-header">
    <div>
      <strong>Title:</strong>
      <%= post.title %>
    </div>
    <% if post.user.present? %>
      <div>
        <%= image_tag(post.user.profile_picture) if post.user.profile_picture.attached? %>
        <p style="display: inline; vertical-align: super;"> <%= post.user.display_name %> </p>
      </div>
    <% else post.user.present? %>
      <p> Sin√≥nimo </p>
    <% end %>
  </div>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
  <div class= "post-card-actions">
    <span><%= "#{post.comments.size} comments" %></span>
  </div>
</div>

<% if local_assigns[:include_form].present? %>
  <div id="<%= dom_id post %>_comments">
    <%= render 'comments', post: post %>
    <%= render 'comments/form', post: post %>
  </div>
<% end %>
