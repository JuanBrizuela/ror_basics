<h3>Comments:</h3>
<% post.comments.each do |comment| %>
  <div class="comment-container">
    <%= image_tag 'profile.png' %>
    <div>
      <% if comment.user %>
        <strong><%= comment.user.display_name %></strong>
      <% else %>
        <strong>Anonymous</strong>
      <% end %>
      <p><%= comment.content %></p>
    </div>
    <p><%= comment.likes.count %></p>
    <% if user_signed_in? %>
      <% if user_liked?(comment) %>
        <%= button_to like_path(find_user_like(comment)), method: :delete, class: 'like' do %>
          <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" viewBox="0 0 24 24" stroke="blue" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
          </svg>
        <% end %>
      <% else%>
        <%= button_to likes_path(likable_id: comment.id, likable_type: 'Comment', user_id: current_user.id), method: :post, class: 'like' do %>
          <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" viewBox="0 0 24 24" stroke="gray" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
          </svg>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
